@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header class="bg-dark text-light p-3">
        <div class="d-flex align-items-center">
            <img src="logo.png" alt="Website Logo" class="me-2" height="50">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
            </li>
        </div>
        <nav>
            <ul class="list-unstyled d-flex m-0">
                <li class="me-3"><a href="/Customer/CustomerProfile" class="text-light text-decoration-none">Customer Profile</a></li>

                <li class="me-3"><a href="/Customer/MedicalHistory" class="text-light text-decoration-none">Medical History</a></li>
                <li class="me-3"><a href="/Customer/PurchaseHistory" class="text-light text-decoration-none">Purchase History</a></li>
                <li class="me-3"><a href="/settings" class="text-light text-decoration-none">Settings</a></li>
                <li class="nav-item">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Customer", "Account", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
                    </form>
                </li>
            </ul>
        </nav>
    </header>

    <main class="container mt-4">
        <section class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h2 class="card-title">Profile</h2>
                        <a href="/profile"><img src="profile-icon.png" alt="Profile Icon" class="img-fluid"></a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h2 class="card-title">Medical History</h2>
                        <a href="/medical-history"><img src="medical-history-icon.png" alt="Medical History Icon" class="img-fluid"></a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h2 class="card-title">Purchase History</h2>
                        <a href="/purchase-history"><img src="purchase-history-icon.png" alt="Purchase History Icon" class="img-fluid"></a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h2 class="card-title">Appointments</h2>
                        <a href="/appointments"><img src="appointments-icon.png" alt="Appointments Icon" class="img-fluid"></a>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="bg-dark text-light p-3 mt-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    &copy; 2024 JasPharmacy. All rights reserved.
                </div>
                <div class="col-auto">
                    <ul class="list-inline m-0">
                        <li class="list-inline-item"><a href="/about" class="text-light text-decoration-none">About Us</a></li>
                        <li class="list-inline-item"><a href="/contact" class="text-light text-decoration-none">Contact Us</a></li>
                        <li class="list-inline-item"><a href="/terms" class="text-light text-decoration-none">Terms of Service</a></li>
                        <li class="list-inline-item"><a href="/privacy" class="text-light text-decoration-none">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
