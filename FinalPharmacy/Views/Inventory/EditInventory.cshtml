@{
    Layout = null;
}
@model FinalPharmacy.ViewModels.InventoryVM
<h1> Edit</h1>
@if (Model != null)

{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Product Id</label>
            <input type ="text" class="form-control" asp-for="ProductId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Product Name</label>
            <input type ="text" class="form-control" asp-for="ProductName"/>
        </div>
        <div class="mt-3">
            <label class="form-label">Batch Number</label>
            <input type="text" class="form-control" asp-for="BatchNumber" />
        </div>
        <div class="mt-3">
            <label class="form-label">Product Category</label>
            <input type="text" class="form-control" asp-for="ProductCategory" />
        </div>
        <div class="mt-3">
            <label class="form-label">Purchase Date</label>
            <input type="date" class="form-control" asp-for="PurchaseDate" />
        </div>
        <div class="mt-3">
            <label class="form-label">Quantity</label>
            <input type="text" class="form-control" asp-for="Quantity" />
        </div>
        <div class="mt-3">
            <label class="form-label">Capacity</label>
            <input type="text" class="form-control" asp-for="Capacity" />
        </div>
        <div class="mt-3">
            <label class="form-label">Unit Cost</label>
            <input type="text" class="form-control" asp-for="UnitCost" />
        </div>
        <div class="mt-3">
            <label class="form-label">Total Cost</label>
            <input type="text" class="form-control" asp-for="TotalCost" />
        </div>
       <div class="mt-3">
        <label for="supplier">Supplier:</label>
        <select class="form-control" id="supplier" name="SupplierId">
            <option value="">Select Supplier</option>
            @if (ViewBag.Suppliers != null)
            {
                foreach (var supplier in ViewBag.Suppliers)
                {
                    <option value="@supplier.Value">@supplier.Text</option>
                }
            }
        </select>

    </div>
    </form>
}
else
{
<p>No data</p>
}

